{
  "apps" : [
    {
      "name"      : "LazyGardener",
      "script"    : "app.js",
      "watch"     : true,
      "ignore_watch" : ["logs", "less", "views", "public", "node_modules", "bower_components", "app/api\\.js", "*\\.ejs", "test.js"],
      "error_file" : "./logs/main-err.log",
      "out_file"   : "./logs/main.log"
    },
    {
      "name"       : "LazyGardener-api",
      "script"     : "./app/api.js",
      "instances"  : 2,
      "exec_mode"  : "cluster_mode",
      "error_file" : "./logs/api-err.log",
    }
  ]
}
